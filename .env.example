# =================================
# SymptoMap Environment Variables
# =================================
# Copy this file to .env and update values for PRODUCTION

# ------------------------------
# Core Settings
# ------------------------------
ENVIRONMENT=production
DEBUG=False
API_V1_PREFIX=/api/v1

# ------------------------------
# Database
# ------------------------------
# Use PostgreSQL for production
DATABASE_URL=postgresql://user:password@localhost/symptomap
# DATABASE_URL=sqlite:///./symptomap.db

# ------------------------------
# Security & Authentication
# ------------------------------
# Generate a strong 32+ char secret: `openssl rand -hex 32`
JWT_SECRET_KEY=change-this-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Policy Hardening
BCRYPT_COST_FACTOR=12
PASSWORD_MIN_LENGTH=12
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15

# Default Doctor Access (Change this!)
DOCTOR_PASSWORD=Doctor@SymptoMap2025

# ------------------------------
# External Services
# ------------------------------
# Email Service (Resend) - Required for MFA/Alerts
RESEND_API_KEY=re_123456789
EMAIL_FROM=noreply@symptomap.com
EMAIL_FROM_NAME=SymptoMap

# Sentry Error Tracking (Optional)
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# OpenAI (Optional - for advanced predictions)
OPENAI_API_KEY=sk-...

# ------------------------------
# Networking
# ------------------------------
# CORS Origins (Comma separated, NO spaces)
CORS_ORIGINS=http://localhost:3000,https://symptomap.com,https://your-frontend-app.vercel.app

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
