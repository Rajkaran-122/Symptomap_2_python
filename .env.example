# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_DB=symptomap
POSTGRES_USER=symptomap
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_PORT=5432

# ============================================
# BACKEND CONFIGURATION
# ============================================
BACKEND_PORT=8000
DEBUG=false
API_V1_PREFIX=/api/v1

# CORS - Add your frontend domain
CORS_ORIGINS=http://localhost:3000,http://localhost:80,https://yourdomain.com

# Security - CHANGE THESE IN PRODUCTION!
JWT_SECRET=change-this-to-a-random-secret-key-minimum-32-characters
JWT_REFRESH_SECRET=change-this-to-another-random-secret-key-minimum-32-characters

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000/api/v1
VITE_ENVIRONMENT=production

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================

# Twilio SMS Service
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# SendGrid Email Service
SENDGRID_API_KEY=your_sendgrid_api_key

# OpenAI API (for chatbot)
OPENAI_API_KEY=your_openai_api_key

# Mapbox (for maps)
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# ============================================
# OPTIONAL SERVICES
# ============================================

# Redis Cache
REDIS_PORT=6379

# Monitoring
GRAFANA_PASSWORD=admin
